						"<label class='checkbox'>" .
							"<input title='$labels[linkOriginal]' type='checkbox' $linkOriginalChecked " .
								"name='selected_image_link' id='selected_image_link' value='{$original->url}' /> " .
							"<i class='fa fa-link ui-priority-secondary'></i>&nbsp;" .

		if(!$fieldgroup) $session->redirect('./');

		$this->breadcrumb("./", $this->moduleInfo['title']);
		$this->breadcrumb("./edit?id={$this->template->id}", $this->template->name);
		
		/** @var InputfieldForm $form */

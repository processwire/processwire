	 *
	 */
	public function ___executeFieldgroup() {
		
		$modules = $this->wire()->modules;
		$input = $this->wire()->input;
		$session = $this->wire()->session;

		$fieldgroupID = (int) $input->get('fieldgroup');
		if(!$fieldgroupID) $session->redirect('./'); 
		
